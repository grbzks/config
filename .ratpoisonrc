# keybindings
bind f exec firefox
bind h exec xset dpms force off
bind l exec slock
bind v exec apvlv
bind Q quit
bind R restart
bind U undo
bind Escape abort
bind Tab next

# banish the rat cursor
banish

# keybindings
#definekey top Print exec import -window root ~/`date +%Y-%m-%d--%H:%M:%S`.png
definekey top Print exec scrot
definekey top XF86AudioMute exec amixer -q set PCM 0%
definekey top XF86AudioLowerVolume exec amixer -q set PCM 3dB-
definekey top XF86AudioRaiseVolume exec amixer -q set PCM 3dB+
definekey top XF86AudioPlay exec mpc toggle > /dev/null
definekey top XF86AudioStop exec mpc stop > /dev/null
definekey top XF86AudioPrev exec mpc prev > /dev/null
definekey top XF86AudioNext exec mpc next > /dev/null

# default escape key
escape F30
# seconds the message window is shown
msgwait 5
# which  windows steal focus
rudeness 13
# dont show a startup message
startup_message off

